   "Resources": {
      "rVPCProduction": {
         "Type": "AWS::EC2::VPC",
         "Properties": {
            "CidrBlock": {
               "Ref": "pProductionCIDR"
            },
            "InstanceTenancy": "default",
            "EnableDnsSupport": "true",
            "EnableDnsHostnames": "true",
            "Tags": [
               {
                  "Key": "Name",
                  "Value": {
                     "Ref": "pProductionVPCName"
                  }
               }
            ]
         }
      },
      "rVPCManagement": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::VPC",
         "Properties": {
            "CidrBlock": {
               "Ref": "pManagementCIDR"
            },
            "InstanceTenancy": "default",
            "EnableDnsSupport": "true",
            "EnableDnsHostnames": "true",
            "Tags": [
               {
                  "Key": "Name",
                  "Value": {
                     "Ref": "pManagementVPCName"
                  }
               }
            ]
         }
      },
      "rSecurityGroupProductionNAT": {
         "Type": "AWS::EC2::SecurityGroup",
         "Properties": {
            "GroupDescription": "Allow Nat from production",
            "VpcId": {
               "Ref": "rVPCProduction"
            },
            "SecurityGroupIngress": [
               {
                  "IpProtocol": "tcp",
                  "FromPort": "80",
                  "ToPort": "80",
                  "CidrIp": {
                     "Ref": "pProductionCIDR"
                  }
               },
               {
                  "IpProtocol": "tcp",
                  "FromPort": "443",
                  "ToPort": "443",
                  "CidrIp": {
                     "Ref": "pProductionCIDR"
                  }
               }
            ]
         }
      },
      "rSecurityGroupManagementNAT": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::SecurityGroup",
         "Properties": {
            "GroupDescription": "Allow Nat from Management VPC",
            "VpcId": {
               "Ref": "rVPCManagement"
            },
            "SecurityGroupIngress": [
               {
                  "IpProtocol": "tcp",
                  "FromPort": "80",
                  "ToPort": "80",
                  "CidrIp": {
                     "Ref": "pManagementCIDR"
                  }
               },
               {
                  "IpProtocol": "tcp",
                  "FromPort": "443",
                  "ToPort": "443",
                  "CidrIp": {
                     "Ref": "pManagementCIDR"
                  }
               }
            ]
         }
      },
      "rSecurityGroupSSHFromProd": {
         "Type": "AWS::EC2::SecurityGroup",
         "Properties": {
            "GroupDescription": "Enable SSH access via port 22",
            "VpcId": {
               "Ref": "rVPCProduction"
            },
            "SecurityGroupIngress": [
               {
                  "IpProtocol": "tcp",
                  "FromPort": "22",
                  "ToPort": "22",
                  "CidrIp": {
                     "Ref": "pProductionCIDR"
                  }
               }
            ]
         }
      },
      "rSecurityGroupSSHFromMgmt": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::SecurityGroup",
         "Properties": {
            "GroupDescription": "Enable SSH access via port 22",
            "VpcId": {
               "Ref": "rVPCManagement"
            },
            "SecurityGroupIngress": [
               {
                  "IpProtocol": "tcp",
                  "FromPort": "22",
                  "ToPort": "22",
                  "CidrIp": {
                     "Ref": "pManagementCIDR"
                  }
               }
            ]
         }
      },
      "rVPCPeeringConnection": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::VPCPeeringConnection",
         "DependsOn": [ "rVPCProduction" ],
         "Properties": {
            "VpcId": { "Ref": "rVPCManagement" },
            "PeerVpcId": { "Ref": "rVPCProduction" }
         }
      },
      "rSubnetManagementPublicA": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": { "Ref": "pManagementPublicACIDR" },
            "AvailabilityZone": { "Ref": "pRegionAZ1Name" },
            "VpcId": { "Ref": "rVPCManagement" },
            "Tags": [ { "Key": "Name", "Value": "ManagementPublic Subnet A" } ] }
      },
      "rSubnetManagementPublicB": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::Subnet",
         "Properties": {
	    "CidrBlock": { "Ref": "pManagementPublicBCIDR" },
            "AvailabilityZone": { "Ref": "pRegionAZ2Name" },
            "VpcId": { "Ref": "rVPCManagement" },
            "Tags": [ { "Key": "Name", "Value": "ManagementPublic Subnet B" } ]
         }
      },
      "rSubnetProductionPublicA": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": {
               "Ref": "pProductionPublicACIDR"
            },
            "AvailabilityZone": {
               "Ref": "pRegionAZ1Name"
            },
            "VpcId": {
               "Ref": "rVPCProduction"
            },
            "Tags": [
               {
                  "Key": "Name",
                  "Value": "ProductionPublic Subnet A"
               }
            ]
         }
      },
      "rSubnetProductionPublicB": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": {
               "Ref": "pProductionPublicBCIDR"
            },
            "AvailabilityZone": {
               "Ref": "pRegionAZ2Name"
            },
            "VpcId": {
               "Ref": "rVPCProduction"
            },
            "Tags": [
               {
                  "Key": "Name",
                  "Value": "ProductionPublic Subnet B"
               }
            ]
         }
      },
      "rSubnetProductionPrivateA": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": {
               "Ref": "pProductionPrivateSubnetACIDR"
            },
            "AvailabilityZone": {
               "Ref": "pRegionAZ1Name"
            },
            "VpcId": {
               "Ref": "rVPCProduction"
            },
            "Tags": [
               {
                  "Key": "Name",
                  "Value": "ProductionPrivate Subnet A"
               }
            ]
         }
      },
      "rSubnetProductionPrivateB": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": {
               "Ref": "pProductionPrivateSubnetBCIDR"
            },
            "AvailabilityZone": {
               "Ref": "pRegionAZ2Name"
            },
            "VpcId": {
               "Ref": "rVPCProduction"
            },
            "Tags": [
               {
                  "Key": "Name",
                  "Value": "ProductionPrivate Subnet B"
               }
            ]
         }
      },
      "rSubnetManagementPrivateA": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": {
               "Ref": "pManagementPrivateACIDR"
            },
            "AvailabilityZone": {
               "Ref": "pRegionAZ1Name"
            },
            "VpcId": {
               "Ref": "rVPCManagement"
            },
            "Tags": [
               {
                  "Key": "Name",
                  "Value": "ManagementPrivate Subnet A"
               }
            ]
         }
      },
      "rSubnetManagementPrivateB": {
         "Type": "AWS::EC2::Subnet",
         "Properties": {
            "CidrBlock": { "Ref": "pManagementPrivateBCIDR" },
            "AvailabilityZone": { "Ref": "pRegionAZ2Name" },
            "VpcId": { "Ref": "rVPCManagement" },
            "Tags": [ { "Key": "Name", "Value": "ManagementPrivate Subnet B" } ]
         }
      },
      "rIGWProduction": {
         "Type": "AWS::EC2::InternetGateway",
         "Properties": {
            "Tags": [ { "Key": "Name", "Value": "Production Internet Gateway" } ]
         }
      },
      "rIGWManagement": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::InternetGateway",
         "Properties": {
            "Tags": [ { "Key": "Name", "Value": "Management Internet Gateway" } ]
         }
      },
      "rDHCPoptions": {
         "Type": "AWS::EC2::DHCPOptions",
         "Properties": {
            "DomainName": {
               "Ref": "pRegionDomain"
            },
            "DomainNameServers": [
               "AmazonProvidedDNS"
            ]
         }
      },
      "rNACLProduction": {
         "Type": "AWS::EC2::NetworkAcl",
         "Properties": {
            "VpcId": {
               "Ref": "rVPCProduction"
            }
         }
      },
      "rRouteTableProductionPublic": {
         "Type": "AWS::EC2::RouteTable",
         "Properties": {
            "VpcId": { "Ref": "rVPCProduction" },
            "Tags": [ { "Key": "Name", "Value": "Production Public" } ]
         }
      },
      "rRouteTableProductionPrivateAZ1": {
	 "Type": "AWS::EC2::RouteTable",
	 "Properties": {
	    "VpcId": { "Ref": "rVPCProduction" },
	    "Tags": [ { "Key": "Name", "Value": "Production Private AZ1" } ]
	 }
      },
      "rRouteTableProductionPrivateAZ2": {
	 "Type": "AWS::EC2::RouteTable",
	 "Properties": {
	    "VpcId": { "Ref": "rVPCProduction" },
	    "Tags": [ { "Key": "Name", "Value": "Production Private AZ2" } ]
	 }
      },
      "rRouteTableManagementPublic": {
	 "Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::RouteTable",
	 "Properties": {
	    "VpcId": { "Ref": "rVPCManagement" },
	    "Tags": [ { "Key": "Name", "Value": "Management Public" } ] }
      },
      "rRouteTableManagementPrivateAZ1": {
	 "Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::RouteTable",
	 "Properties": {
	    "VpcId": { "Ref": "rVPCManagement" },
	    "Tags": [ { "Key": "Name", "Value": "Management Private AZ1" } ] }
      },
      "rRouteTableManagementPrivateAZ2": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::RouteTable",
         "Properties": {
            "VpcId": { "Ref": "rVPCManagement" },
            "Tags": [ { "Key": "Name", "Value": "Management Private AZ2" } ]
         }
      },
      "rRouteManagementPublicToIGW": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::Route",
         "Properties": {
            "RouteTableId": { "Ref": "rRouteTableManagementPublic" },
            "GatewayId": { "Ref": "rIGWManagement" },
            "DestinationCidrBlock": "0.0.0.0/0"
         }
      },
      "rRouteManagementToProduction": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::Route",
         "Properties": {
            "RouteTableId": { "Ref": "rRouteTableManagementPublic" },
            "VpcPeeringConnectionId": { "Ref": "rVPCPeeringConnection" },
            "DestinationCidrBlock": { "Ref": "pProductionCIDR" }
         }
      },
      "rRouteManagementPrivateAZ1ToProduction": {
	 "Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::Route",
	 "Properties": {
	    "RouteTableId": { "Ref": "rRouteTableManagementPrivateAZ1" },
	    "VpcPeeringConnectionId": { "Ref": "rVPCPeeringConnection" },
	    "DestinationCidrBlock": { "Ref": "pProductionCIDR" }
	 }
      },
      "rRouteManagementPrivateAZ2ToProduction": {
	 "Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::Route",
	 "Properties": {
	    "RouteTableId": { "Ref": "rRouteTableManagementPrivateAZ2" },
	    "VpcPeeringConnectionId": { "Ref": "rVPCPeeringConnection" },
	    "DestinationCidrBlock": { "Ref": "pProductionCIDR" }
	 }
      },
      "rEIPProdNATA": {
	 "Type": "AWS::EC2::EIP",
	 "Properties": { "Domain": "vpc" }
      },
      "rEIPProdNATB": {
         "Type": "AWS::EC2::EIP",
         "Properties": { "Domain": "vpc" }
      },
      "rEIPManagementNATA": {
	"Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::EIP",
         "Properties": { "Domain": "vpc" }
      },
      "rEIPManagementNATB": {
	"Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::EIP",
	 "Properties": { "Domain": "vpc" }
      },
      "rProductionNATGatewayAZ1": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::NatGateway",
         "Properties": {
            "Tags": [ { "Key": "Name", "Value": "Production VPC NAT GatewayA" } ],
	    "AllocationId": { "Fn::GetAtt": [ "rEIPProdNATA", "AllocationId" ] },
	    "SubnetId": { "Ref": "rSubnetProductionPublicA" }
         }
      },
      "rProductionNATGatewayAZ2": {
	 "Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::NatGateway",
	 "Properties": {
	    "Tags": [ { "Key": "Name", "Value": "Production VPC NAT GatewayB" } ],
	    "AllocationId": { "Fn::GetAtt": [ "rEIPProdNATB", "AllocationId" ]  },
	    "SubnetId": { "Ref": "rSubnetProductionPublicB" }
	 }
      },
      "rManagementNATGatewayAZ1": {
	 "Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::NatGateway",
	 "Properties": {
	    "Tags": [ { "Key": "Name", "Value": "Management VPC NAT GatewayA" } ],
	    "AllocationId": { "Fn::GetAtt": [ "rEIPManagementNATA", "AllocationId" ] },
	    "SubnetId": { "Ref": "rSubnetManagementPublicA" }
	 }
      },
      "rManagementNATGatewayAZ2": {
	 "Condition" : "cCreateVPCManagement",
	 "Type": "AWS::EC2::NatGateway",
	 "Properties": {
	    "Tags": [ { "Key": "Name", "Value": "Management VPC NAT GatewayB" } ],
	    "AllocationId": { "Fn::GetAtt": [ "rEIPManagementNATB", "AllocationId" ] },
	    "SubnetId": { "Ref": "rSubnetManagementPublicB" }
	 }
      },

      "rRouteProductionPublicToIGW": {
         "Type": "AWS::EC2::Route",
	 "DependsOn" : "rGWAttachmentProdIGW",
         "Properties": {
            "RouteTableId": { "Ref": "rRouteTableProductionPublic" },
            "GatewayId": { "Ref": "rIGWProduction" },
            "DestinationCidrBlock": "0.0.0.0/0"
         }
      },
      "rRouteProductionPublicToManagement": {
	 "Condition" : "cCreateVPCManagement",
         "Type": "AWS::EC2::Route",
         "Properties": {
            "RouteTableId": { "Ref": "rRouteTableProductionPublic" },
            "VpcPeeringConnectionId": { "Ref": "rVPCPeeringConnection" },
            "DestinationCidrBlock": { "Ref": "pManagementCIDR" }
         }
      },
      "rRouteProductionPrivateAZ1ToNAT": {
	 "Type": "AWS::EC2::Route",
	 "Properties": {
	    "DestinationCidrBlock": "0.0.0.0/0",
	    "RouteTableId": { "Ref": "rRouteTableProductionPrivateAZ1" },
	    "NatGatewayId": { "Ref": "rProductionNATGatewayAZ1" }
	 }
      },
      "rRouteProductionPrivateAZ2ToNAT": {
         "Type": "AWS::EC2::Route",
         "Properties": {
            "DestinationCidrBlock": "0.0.0.0/0",
            "RouteTableId": { "Ref": "rRouteTableProductionPrivateAZ2" },
            "NatGatewayId": { "Ref": "rProductionNATGatewayAZ2" }
         }
      },
      "rRouteManagementPrivateAZ1ToNAT": {
	 "Type": "AWS::EC2::Route",
	 "Properties": {
	    "DestinationCidrBlock": "0.0.0.0/0",
	    "RouteTableId": { "Ref": "rRouteTableManagementPrivateAZ1" },
	    "NatGatewayId": { "Ref": "rManagementNATGatewayAZ1" }
	 }
      },
      "rRouteManagementPrivateAZ2ToNAT": {
	 "Type": "AWS::EC2::Route",
	 "Properties": {
	    "DestinationCidrBlock": "0.0.0.0/0",
	    "RouteTableId": { "Ref": "rRouteTableManagementPrivateAZ2" },
	    "NatGatewayId": { "Ref": "rManagementNATGatewayAZ2" }
	 }
