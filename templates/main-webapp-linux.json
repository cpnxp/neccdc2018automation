      "stack1": {
         "Type": "AWS::CloudFormation::Stack",
	 "Condition": "CreateStack1",
         "Properties": {
            "TemplateURL": {
               "Ref": "stack1URL"
            },
            "TimeoutInMinutes": "20",
	    "Parameters" : {
		"pCreateCloudTrail" : {
			"Ref" : "pCreateCloudTrail"
		},
		"pS3CloudTrailBucketExisting" : {
		    "Ref" : "pS3CloudTrailBucketExisting"
